# NEBULA - Environment Variables Configuration
# Copy this file to `.env` and adjust values for your deployment

# ========================
# DOCKER CONFIGURATION
# ========================

# Docker Compose project name
COMPOSE_PROJECT_NAME=nebula

# Timezone for containers
TZ=Europe/Madrid

# ========================
# NGINX PROXY MANAGER
# ========================

# Initial admin credentials (change after first login)
NPM_ADMIN_EMAIL=admin@example.com
NPM_ADMIN_PASSWORD=ChangeThisPassword123!

# Disable IPv6 if not needed (true/false)
DISABLE_IPV6=true

# ========================
# NETDATA MONITORING
# ========================

# Netdata Cloud integration (optional)
# NETDATA_CLAIM_TOKEN=your-token-here
# NETDATA_CLAIM_URL=https://app.netdata.cloud
NETDATA_HOSTNAME=nebula-server

# ========================
# WORDPRESS (if deployed)
# ========================

# Database credentials
MYSQL_ROOT_PASSWORD=StrongRootPassword456!
WORDPRESS_DB_PASSWORD=WordPressUserPassword789!

# WordPress site settings
WORDPRESS_SITE_TITLE="NEBULA Platform"
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=AdminWordPressPassword!

# ========================
# SECURITY & PORTS
# ========================

# Custom SSH port
SSH_PORT=2222

# Development ports (adjust if conflicts)
HTTP_PORT=80
HTTPS_PORT=443
NPM_ADMIN_PORT=81
NETDATA_PORT=19999
CUSTOM_HTTPS_PORT=10443

# ========================
# SSL/TLS CERTIFICATES
# ========================

# For Let's Encrypt in production
# SSL_EMAIL=ssl-admin@yourdomain.com
# SSL_DOMAINS=yourdomain.com,*.yourdomain.com

# Self-signed certificate details
SSL_COUNTRY=ES
SSL_STATE=Madrid
SSL_LOCALITY=Madrid
SSL_ORGANIZATION=NEBULA
SSL_COMMON_NAME=*.nebula.test
SSL_VALID_DAYS=365

# ========================
# BACKUP CONFIGURATION
# ========================

# Backup retention (days)
BACKUP_RETENTION_DAYS=7

# Backup directory (relative to project root)
BACKUP_DIR=backups

# ========================
# APPLICATION SPECIFIC
# ========================

# Python/Flask app
FLASK_ENV=production
FLASK_APP=app.py

# Static web app
WEB_TITLE="NEBULA Platform"
WEB_DESCRIPTION="Self-hosted PaaS for low-resource environments"
